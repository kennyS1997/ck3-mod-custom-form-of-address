types VNTL_types
{
    # Fake invisible widget used only as means to delay the call to OpenTitleRenamePopup
    # for 0.1 second, so that it has enough time to recognize the title holder change,
    # which will happen on the first call to VNTL_sgui_bind_vanity_title.
    type VNTL_flowcontainer_edit_foa_delayed = flowcontainer {
        using = VNTL_edit_foa_delayed
    }

    # "Edit FoA" button-icon to be displayed inline next to text
    type VNTL_flowcontainer_edit_foa_inline = flowcontainer {
        button_icon = {
            using = VNTL_edit_foa_immediate_outer
            using = VNTL_edit_foa_immediate_inner

            texture = "gfx/interface/icons/flat_icons/VNTL_edit_foa.dds"
        }

        VNTL_flowcontainer_edit_foa_delayed = {}
    }

    # Round "Edit FoA" button
    type VNTL_flowcontainer_edit_foa = flowcontainer {
        button_normal = {
            size = { 35 35 }

            using = tooltip_es

            using = VNTL_edit_foa_immediate_outer

            icon = {
                texture = "gfx/interface/buttons/button_lifestyles_base.dds"
                size = { 100% 100% }
            }

            button_icon = {
                using = VNTL_edit_foa_immediate_inner

                size = { 25 25 }
                parentanchor = center

                texture = "gfx/interface/icons/flat_icons/VNTL_edit_foa.dds"

                # Commented-out, since the icon is too big and gets cut off if masked.
                # modify_texture = {
                # 	texture = "gfx/interface/icons/focuses/hud_icon_mask.dds"
                # 	blend_mode = alphamultiply
                # }
            }
        }

        VNTL_flowcontainer_edit_foa_delayed = {}
    }

    # Round "Edit FoA" button with offset, to be displayed over character portrait in window_character.gui .
    type VNTL_flowcontainer_edit_foa_offset = flowcontainer {
        margin_left = 45
        margin_bottom = 5

        VNTL_flowcontainer_edit_foa = {}

        parentanchor = bottom
    }

    type VNTL_vbox_title_type_text = vbox {
        using = VNTL_hide_if_not_vanity_title

        text_single = {
            layoutpolicy_horizontal = expanding
            visible = "[GetScriptedGui('VNTL_sgui_is_current_bound_vanity_title').IsValid(GuiScope.SetRoot(TitleViewWindow.GetTitle.MakeScope).End))]"
            text = "VNTL_CURRENT_VANITY_TITLE_TYPE_TEXT"
        }

        text_single = {
            layoutpolicy_horizontal = expanding
            visible = "[GetScriptedGui('VNTL_sgui_is_former_bound_vanity_title').IsValid(GuiScope.SetRoot(TitleViewWindow.GetTitle.MakeScope).End))]"
            text = "VNTL_FORMER_VANITY_TITLE_TYPE_TEXT"
        }

        text_single = {
            layoutpolicy_horizontal = expanding
            visible = "[GetScriptedGui('VNTL_sgui_is_unbound_vanity_title').IsValid(GuiScope.SetRoot(TitleViewWindow.GetTitle.MakeScope).End))]"
            text = "VNTL_UNUSED_VANITY_TITLE_TYPE_TEXT"
        }
    }
}
